<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt101"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flash1"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352"
        app:srcCompat="@drawable/_97127690_words_2bfail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="192dp"
        android:text="Made for you"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontal1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/S1001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/savage"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="1dp" />

            <ImageView
                android:id="@+id/S1002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1001"
                app:srcCompat="@drawable/steriohearts"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/S1003"
                android:layout_width="131dp"
                android:layout_height="99dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1002"
                app:srcCompat="@drawable/attention"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="1dp" />

            <ImageView
                android:id="@+id/S1004"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1003"
                app:srcCompat="@drawable/yourlovecould_start"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="-1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:text="Chill"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/txt101"
        app:layout_constraintTop_toBottomOf="@id/horizontal1" />

    <HorizontalScrollView
        android:id="@+id/horizontal2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        tools:layout_editor_absoluteX="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/S1005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/dualipa"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="-1dp" />

            <ImageView
                android:id="@+id/S1006"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1005"
                app:srcCompat="@drawable/mess"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/S1007"
                android:layout_width="131dp"
                android:layout_height="99dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@id/S1006"
                app:srcCompat="@drawable/play"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/S1008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1007"
                app:srcCompat="@drawable/thriller"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:text="Best of artists"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal2" />

    <HorizontalScrollView
        android:id="@+id/horizontal3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/S1009"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/shape_of_you"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/S1010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1009"
                app:srcCompat="@drawable/alone"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/S1011"
                android:layout_width="131dp"
                android:layout_height="99dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1010"
                app:srcCompat="@drawable/dusk_till_dawn"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="1dp" />

            <ImageView
                android:id="@+id/S1012"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:onClick="handleSelection"
                app:layout_constraintStart_toEndOf="@+id/S1011"
                app:srcCompat="@drawable/havana"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottomnav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>


